
<%= javascript_include_tag "application", "data-turbolinks-track" => true  %>

<head>
	<link href="https://fonts.googleapis.com/css?family=EB+Garamond|Merriweather|Open+Sans|Roboto:300,400&display=swap" rel="stylesheet">
  <title>All Events </title>
</head>

<div class="banner">
	<h1>All Events For <%= current_user.netid %><%= link_to '(logout)', logout_path, class: "logout" %>
  </h1>
</div>

<%= form_for_filterrific @filterrific do |f| %>
  <div class="search">
      <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
    <%= f.text_field(
      :search_query,
      class: 'filterrific-periodically-observed form-control', placeholder: 'Find your event by title'
    ) %>
  </div>
  <%# add an automated spinner to your form when the list is refreshed %>
<% end %>

<%= render(
  partial: 'events/list',
  locals: { events: @events }
) %>

<div>
	<p>Don't see your event?</p>
	<a href="../events/new">Add it</a>
</div>

<div class="redirect_link">
<p><%= link_to "Back to Home", '/' %></p>
</div>
