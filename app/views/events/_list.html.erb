<!-- NOTE: HAVE REMOVED FILTERIFFIC LINES -->

  <table>
    <tr>
      <th>Title</th>
      <th>Host Names</th>
      <th>Host NetIDs</th>
      <th>Edit Event</th>

    </tr>

    <% @events.each do |event| %>
      <tr> 
        <td id="titlecells"> <%= link_to event.title, event_path(event) %></td>
        <td>
          <% event.hosts.each do |host| %> 
            <ul class="comma-list"> 
              <li> <%= host.name %> </li>
            </ul> 
          <% end %> 
        </td>
        <td><%= render event.hosts %></td>
        <td><%= link_to 'Add Hosts', edit_event_path(event) %></td> 
      </tr>
   <% end %> 
  </table>
